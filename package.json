{
	"name": "regoeditor",
	"displayName": "RegoEditor",
	"description": "Develop custom policies for Terrascan",
	"version": "0.0.1",
	"publisher": "AccuricsInc",
	"repository": {
		"type": "git",
		"url": "https://github.com/accurics/RegoEditor.git"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "regoeditor.generateConfig",
				"title": "RegoEditor: Generate Config"
			},
			{
				"command": "regoeditor.generateRego",
				"title": "RegoEditor: Generate Rego"
			},
			{
				"command": "regoeditor.showRegoHelperTemplate",
				"title": "RegoEditor: Show Rego Helper Template"
			},
			{
				"command": "regoeditor.resetPolicySuffixCounter",
				"title": "RegoEditor: Reset Policy ID Suffix Counter"
			}
		],
		"keybindings": [
			{
				"command": "regoeditor.generateRego",
				"key": "ctrl+alt+g"
			},
			{
				"command": "regoeditor.generateConfig",
				"key": "alt+shift+c"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == json",
					"command": "regoeditor.generateRego"
				},
				{
					"when": "resourceLangId == terraform || resourceLangId == yaml || !explorerResourceIsFolder",
					"command": "regoeditor.generateConfig"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId == json",
					"command": "regoeditor.generateRego"
				},
				{
					"when": "resourceLangId == terraform || resourceLangId == yaml",
					"command": "regoeditor.generateConfig"
				}
			],
			"commandPalette": [
				{
					"when": "resourceLangId == json",
					"command": "regoeditor.generateRego"
				},
				{
					"when": "resourceLangId == terraform || resourceLangId == yaml",
					"command": "regoeditor.generateConfig"
				},
				{
					"command": "regoeditor.showRegoHelperTemplate"
				},
				{
					"command": "regoeditor.resetPolicySuffixCounter"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"decompress": "^4.2.1",
		"typed-rest-client": "^1.8.4"
	},
	"devDependencies": {
		"@types/decompress": "^4.2.3",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/uuid": "^8.3.1",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
